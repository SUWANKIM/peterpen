<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TextView7"
                    android:layout_width="98dp"
                    android:layout_height="49dp"
                    android:layout_weight="1"
                    android:text="타이틀(*)" />

                <EditText
                    android:id="@+id/Title"
                    android:layout_width="182dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="타이틀" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="프로그램이름을 적어주세요" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TextView1"
                    android:layout_width="98dp"
                    android:layout_height="49dp"
                    android:layout_weight="1"
                    android:text="Host명(*)" />

                <EditText
                    android:id="@+id/hostname"
                    android:layout_width="182dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="host명" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="피터팬에서 대원들에게 보여지는 이름입니다.(닉네임 사용도 가능)" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/realname"
                    android:layout_width="98dp"
                    android:layout_height="49dp"
                    android:layout_weight="1"
                    android:text="Host이름(*)" />

                <EditText
                    android:id="@+id/editText4"
                    android:layout_width="182dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="host이름" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="호스트님의 실제이름을 입력해주세요" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TextView5"
                    android:layout_width="98dp"
                    android:layout_height="49dp"
                    android:layout_weight="1"
                    android:text="개인연락처(*)" />

                <EditText
                    android:id="@+id/tel1"
                    android:layout_width="182dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="개인연락처" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="문자 수신 가능한 휴대폰 번호를 입력해주세요 .참가자 명단,QNA 질문내용 ,최소인원 미달 취소 등이 안내됩니다." />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TextView6"
                    android:layout_width="98dp"
                    android:layout_height="49dp"
                    android:layout_weight="1"
                    android:text="집결지연락처" />

                <EditText
                    android:id="@+id/tel2"
                    android:layout_width="182dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="집결자연락처" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="대원에게 연락처 제공이 필요할 경우 사용되는 번호입니다. 집결지 연락처가 있을 경우에 적어주세요." />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TextView8"
                    android:layout_width="98dp"
                    android:layout_height="49dp"
                    android:layout_weight="1"
                    android:text="이메일(*)" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="182dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="이메일" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="피터팬 진행 관련 안내사항이 이메일로 발송됩니다. 이메일 주소를 정확하게 입력 부탁드립니다." />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TextView"
                    android:layout_width="98dp"
                    android:layout_height="49dp"
                    android:layout_weight="1"
                    android:text="주소(*)" />

                <EditText
                    android:id="@+id/address"
                    android:layout_width="182dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="주소" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="피터팬이 진행되는 곳의 주소를 적어주시기 바랍니다." />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="저장"
                android:onClick="ClickedButton"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
